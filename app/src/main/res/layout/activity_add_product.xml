<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddProductActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:elevation="25dp"
        android:background="#A5898A">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="스타굿즈 매물 등록"
                android:textSize="19dp"
                android:elevation="15dp"
                android:layout_marginHorizontal="70dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:shadowDx="5"
                android:shadowDy="6"
                android:shadowColor="#888887"
                android:shadowRadius="1.5" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/dirty_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dirty_white"
            android:orientation="vertical">
            <AutoCompleteTextView
                android:id="@+id/starName_autoComplete"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="40dp"
                android:hint="스타"
                android:drawableRight="@drawable/search"
                android:textColorHint="@color/black"
                android:paddingLeft="43dp"
                android:completionThreshold="1"
                android:inputType="text"
                />
            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:spinnerMode="dropdown"
                android:layout_marginHorizontal="40dp"
                android:gravity="left"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1.25dp"
                android:layout_marginHorizontal="42dp"
                android:background="#7E7E7E"
                />
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="40dp"
                android:hint="제목"
                android:textColorHint="@color/black"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="설명"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="43dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/explain"
                android:background="@drawable/gray_round"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginHorizontal="40dp"
                android:paddingHorizontal="43dp"
                android:maxLength="100"
                android:hint="내용을 입력해주세요\n(100글자 이내)"
                />
            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="40dp"
                android:hint="가격(원)"
                android:textColorHint="@color/black"
                android:inputType="number"/>
            <EditText
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="40dp"
                android:hint="수량"
                android:textColorHint="@color/black"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="굿즈 이미지"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="43dp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:background="@color/dirty_white">
                <ImageView
                    android:id="@+id/add_img1"
                    android:elevation="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gray_round"
                    android:padding="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/plus_icon"
                    />
                <ImageView
                    android:id="@+id/add_img2"
                    android:elevation="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gray_round"
                    android:padding="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/plus_icon"
                    />
                <ImageView
                    android:id="@+id/add_img3"
                    android:elevation="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gray_round"
                    android:padding="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/plus_icon"
                    />
                <ImageView
                    android:id="@+id/add_img4"
                    android:elevation="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gray_round"
                    android:padding="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/plus_icon"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">
        <TextView
            android:id="@+id/enroll_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/red_round_button"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="40dp"
            android:text="등록"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="55dp"
            android:foreground="@drawable/right_arrow"
            android:foregroundTint="@color/white"/>
    </FrameLayout>
</LinearLayout>